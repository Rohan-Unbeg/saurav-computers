"use client";

import { useLanguage } from "@/app/context/LanguageProvider";
import { cn } from "@/lib/utils";
import { useState } from "react";
import { motion, AnimatePresence } from "framer-motion";
import { Phone, Mail, MessageCircle, Send, CheckCircle, AlertCircle, Loader2, MapPin as MapPinIcon } from "lucide-react";

const fadeInUp = {
  hidden: { opacity: 0, y: 20 },
  visible: (i = 0) => ({
    opacity: 1,
    y: 0,
    transition: {
      delay: i * 0.1,
      duration: 0.6,
      ease: [0.25, 0.1, 0.25, 1]
    }
  })
};

type FormData = {
  name: string;
  email: string;
  phone: string;
  subject: string;
  message: string;
};

type FormStatus = {
  success: boolean;
  message: string;
} | null;

export default function ContactForm({ className }: { className?: string }) {
  const { t } = useLanguage();
  const [formData, setFormData] = useState<FormData>({
    name: "",
    email: "",
    phone: "",
    subject: "",
    message: "",
  });
  const [formStatus, setFormStatus] = useState<FormStatus>(null);
  const [isSubmitting, setIsSubmitting] = useState(false);

  const handleChange = (
    e: React.ChangeEvent<HTMLInputElement | HTMLTextAreaElement | HTMLSelectElement>
  ) => {
    const { name, value } = e.target;
    setFormData((prev) => ({ ...prev, [name]: value }));
  };

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    setIsSubmitting(true);

    // Form validation
    if (!formData.name || !formData.email || !formData.message) {
      setFormStatus({
        success: false,
        message: t(
          "Please fill in all required fields.",
          "कृपया सर्व आवश्यक फील्ड भरा."
        ),
      });
      setIsSubmitting(false);
      return;
    }

    // Email validation
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(formData.email)) {
      setFormStatus({
        success: false,
        message: t("Please enter a valid email address.", "कृपया वैध ईमेल पत्ता प्रविष्ट करा."),
      });
      setIsSubmitting(false);
      return;
    }

    try {
      // Simulate API call
      await new Promise(resolve => setTimeout(resolve, 1500));
      
      // On success
      setFormStatus({
        success: true,
        message: t(
          "Your message has been sent successfully! We'll get back to you soon.",
          "तुमचा संदेश यशस्वीरीत्या पाठवला गेला आहे! आम्ही लवकरच तुमच्याशी संपर्क साधू."
        ),
      });
      
      // Reset form
      setFormData({ 
        name: "", 
        email: "", 
        phone: "",
        subject: "",
        message: "" 
      });
    } catch (error) {
      setFormStatus({
        success: false,
        message: t(
          "Something went wrong. Please try again later.",
          "काहीतरी चूक झाली. कृपया नंतर पुन्हा प्रयत्न करा."
        ),
      });
    } finally {
      setIsSubmitting(false);
      
      // Clear status message after 5 seconds
      setTimeout(() => {
        setFormStatus(null);
      }, 5000);
    }
  };

  return (
    <div className={cn("relative py-20 md:py-28 overflow-hidden", className)}>
      {/* Decorative elements */}
      <div className="absolute inset-0 overflow-hidden z-0">
        <motion.div 
          className="absolute -top-40 -left-40 w-80 h-80 rounded-full bg-primary/10 blur-3xl"
          initial={{ opacity: 0, x: -50 }}
          animate={{ opacity: 1, x: 0 }}
          transition={{ duration: 0.8, ease: "easeOut" }}
        />
        <motion.div 
          className="absolute -bottom-40 -right-40 w-96 h-96 rounded-full bg-secondary/10 blur-3xl"
          initial={{ opacity: 0, x: 50 }}
          animate={{ opacity: 1, x: 0 }}
          transition={{ duration: 0.8, ease: "easeOut", delay: 0.2 }}
        />
        <div className="absolute inset-0 bg-grid-pattern opacity-5" />
      </div>

      <div className="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <motion.div 
          className="text-center max-w-3xl mx-auto mb-16"
          initial="hidden"
          whileInView="visible"
          viewport={{ once: true, margin: "-100px" }}
          variants={{
            visible: {
              transition: { staggerChildren: 0.1 }
            }
          }}
        >
          <motion.div 
            variants={fadeInUp}
            custom={0.1}
            className="inline-flex items-center px-4 py-2 rounded-full bg-accent/10 text-accent text-sm font-medium mb-6 border border-accent/20 backdrop-blur-sm"
          >
            <span className="relative flex h-2 w-2 mr-2">
              <span className="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent opacity-75"></span>
              <span className="relative inline-flex rounded-full h-2 w-2 bg-accent"></span>
            </span>
            {t("Contact Form", "संपर्क फॉर्म")}
          </motion.div>
          
          <motion.h2 
            variants={fadeInUp}
            custom={0.2}
            className="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 leading-tight bg-clip-text text-transparent bg-gradient-to-r from-primary to-secondary dark:from-primary-dark dark:to-secondary-dark"
          >
            {t("Send Us a Message", "आम्हाला संदेश पाठवा")}
          </motion.h2>
          
          <motion.p 
            variants={fadeInUp}
            custom={0.3}
            className="text-lg text-foreground/80 max-w-2xl mx-auto"
          >
            {t(
              "Have questions or need assistance? Fill out the form below and we'll get back to you within 24 hours.",
              "तुम्हाला प्रश्न आहेत किंवा मदत हवी आहे? खालील फॉर्म भरा आणि आम्ही 24 तासांच्या आत तुमच्याशी संपर्क साधू."
            )}
          </motion.p>
        </motion.div>

        <div className="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
          <motion.div 
            className="lg:col-span-8 lg:col-start-3"
            variants={fadeInUp}
            custom={0.4}
            initial="hidden"
            whileInView="visible"
            viewport={{ once: true, margin: "-50px" }}
          >
            <div className="bg-background/70 backdrop-blur-sm rounded-2xl border border-border/30 p-6 md:p-8 shadow-sm hover:shadow-md transition-shadow duration-300">
              <form onSubmit={handleSubmit} className="space-y-6">
                <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                    <label htmlFor="name" className="block text-sm font-medium text-foreground/80 mb-2">
                      {t("Full Name", "पूर्ण नाव")} <span className="text-destructive">*</span>
                    </label>
                    <div className="relative">
                      <div className="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" className="text-muted-foreground">
                          <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
                          <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                      </div>
                      <input
                        type="text"
                        id="name"
                        name="name"
                        value={formData.name}
                        onChange={handleChange}
                        placeholder={t("John Doe", "राहुल शर्मा")}
                        className="w-full pl-10 pr-4 py-3 rounded-xl border border-border/40 bg-background/80 focus:border-primary/60 focus:ring-2 focus:ring-primary/20 focus:bg-background transition-all duration-200 outline-none hover:border-border/60"
                        required
                      />
                    </div>
                  </div>
                  
                  <div>
                    <label htmlFor="email" className="block text-sm font-medium text-foreground/80 mb-2">
                      {t("Email Address", "ईमेल पत्ता")} <span className="text-destructive">*</span>
