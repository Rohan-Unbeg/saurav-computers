                      </div>
                      <input
                        type="tel"
                        id="phone"
                        name="phone"
                        value={formData.phone}
                        onChange={handleChange}
                        placeholder={t("+91 98765 43210", "+९१ ९८७६५ ४३२१०")}
                        className="w-full pl-10 pr-4 py-3 rounded-xl border border-border/60 bg-background/50 focus:border-primary/60 focus:ring-2 focus:ring-primary/20 focus:bg-background transition-all duration-200 outline-none"
                      />
                    </div>
                  </div>
                  
                  <div>
                    <label htmlFor="subject" className="block text-sm font-medium text-foreground/80 mb-2">
                      {t("Subject", "विषय")}
                    </label>
                    <div className="relative">
                      <div className="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <MessageCircle className="h-4 w-4 text-muted-foreground" />
                      </div>
                      <select
                        id="subject"
                        name="subject"
                        value={formData.subject}
                        onChange={handleChange}
                        className="w-full pl-10 pr-4 py-3 rounded-xl border border-border/60 bg-background/50 focus:border-primary/60 focus:ring-2 focus:ring-primary/20 focus:bg-background transition-all duration-200 appearance-none outline-none"
                      >
                        <option value="">{t("Select a subject", "विषय निवडा")}</option>
                        <option value="general">{t("General Inquiry", "सामान्य चौकशी")}</option>
                        <option value="admission">{t("Admission Query", "प्रवेश चौकशी")}</option>
                        <option value="course">{t("Course Information", "अभ्यासक्रम माहिती")}</option>
                        <option value="feedback">{t("Feedback", "अभिप्राय")}</option>
                        <option value="other">{t("Other", "इतर")}</option>
                      </select>
                      <div className="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                        <svg className="h-4 w-4 text-muted-foreground" viewBox="0 0 20 20" fill="currentColor">
                          <path fillRule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clipRule="evenodd" />
                        </svg>
                      </div>
                    </div>
                  </div>
                </div>

                <div>
                  <label htmlFor="message" className="block text-sm font-medium text-foreground/80 mb-2">
                    {t("Your Message", "तुमचा संदेश")} <span className="text-destructive">*</span>
                  </label>
                  <div className="relative">
                    <div className="absolute top-3 left-3">
                      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" className="text-muted-foreground">
                        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                      </svg>
                    </div>
                    <textarea
                      id="message"
                      name="message"
                      value={formData.message}
                      onChange={handleChange}
                      rows={5}
                      placeholder={t("Type your message here...", "तुमचा संदेश येथे टाइप करा...")}
                      className="w-full pl-10 pr-4 py-3 rounded-xl border border-border/60 bg-background/50 focus:border-primary/60 focus:ring-2 focus:ring-primary/20 focus:bg-background transition-all duration-200 outline-none resize-none"
                      required
                    ></textarea>
                  </div>
                </div>

                <div className="pt-2">
                  <button
                    type="submit"
                    disabled={isSubmitting}
                    className="group relative w-full md:w-auto px-8 py-4 overflow-hidden font-medium rounded-xl bg-gradient-to-br from-primary to-secondary text-white shadow-lg hover:shadow-xl transition-all duration-300 disabled:opacity-70 disabled:cursor-not-allowed"
                  >
                    <span className="absolute inset-0 w-full h-full bg-gradient-to-br from-primary to-secondary transition-all duration-300 ease-out transform group-hover:scale-105"></span>
                    <span className="absolute bottom-0 right-0 block w-64 h-64 mb-32 mr-4 transition-all duration-500 origin-bottom-left transform rotate-45 translate-x-24 bg-primary-dark opacity-30 group-hover:rotate-90 ease-out"></span>
                    <span className="relative flex items-center justify-center gap-2">
                      {isSubmitting ? (
                        <>
                          <Loader2 className="w-5 h-5 animate-spin" />
                          {t("Sending...", "पाठवत आहे...")}
                        </>
                      ) : (
                        <>
                          <Send className="w-5 h-5" />
                          {t("Send Message", "संदेश पाठवा")}
                        </>
                      )}
                    </span>
                  </button>
                </div>

                <AnimatePresence>
                  {formStatus && (
                    <motion.div
                      initial={{ opacity: 0, y: -10 }}
                      animate={{ opacity: 1, y: 0 }}
                      exit={{ opacity: 0, y: -10 }}
                      className={`p-4 rounded-xl text-sm font-medium ${
                        formStatus.success
                          ? "bg-green-50 text-green-800 dark:bg-green-900/30 dark:text-green-300"
                          : "bg-red-50 text-red-800 dark:bg-red-900/30 dark:text-red-300"
                      }`}
                    >
                      <div className="flex items-start">
                        <div className="flex-shrink-0 pt-0.5">
                          {formStatus.success ? (
                            <CheckCircle className="w-5 h-5" />
                          ) : (
                            <AlertCircle className="w-5 h-5" />
                          )}
                        </div>
                        <div className="ml-3">
                          <p>{formStatus.message}</p>
                        </div>
                      </div>
                    </motion.div>
                  )}
                </AnimatePresence>
              </form>
            </div>
          </motion.div>

          <motion.div 
            className="lg:col-span-4"
            variants={fadeInUp}
            custom={0.5}
            initial="hidden"
            whileInView="visible"
            viewport={{ once: true, margin: "-50px" }}
          >
            <motion.div 
              variants={fadeInUp}
              custom={0.5}
              initial="hidden"
              whileInView="visible"
              viewport={{ once: true, margin: "-50px" }}
              className="h-full bg-gradient-to-br from-primary/5 to-secondary/5 backdrop-blur-sm rounded-2xl border border-border/30 p-8 flex flex-col justify-center hover:shadow-md transition-shadow duration-300"
            >  
              <div className="mb-8">
                <h3 className="text-2xl font-bold mb-4">
                  {t("Contact Information", "संपर्क माहिती")}
                </h3>
                <p className="text-muted-foreground">
                  {t(
                    "Feel free to reach out to us through any of these channels.",
                    "आमच्याशी कोणत्याही माध्यमातून संपर्क साधण्यास मोकळे व्हा."
                  )}
                </p>
              </div>

              <div className="space-y-6">
                {/* Address */}
                <div className="flex items-start">
                  <div className="flex-shrink-0 w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary">
                    <MapPin className="w-5 h-5" />
                  </div>
                  <div className="ml-4">
                    <h4 className="text-sm font-medium text-foreground/80">
                      {t("Address", "पत्ता")}
                    </h4>
                    <p className="mt-1 text-foreground">
                      AT POST SHENDURJAN, TQ SINDKHEDRAJA, DIST BULDHANA, PINCODE 443202, MAHARASHTRA
                    </p>
                  </div>
                </div>

                {/* Phone */}
                <div className="flex items-start">
                  <div className="flex-shrink-0 w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary">
                    <Phone className="w-5 h-5" />
                  </div>
                  <div className="ml-4">
                    <h4 className="text-sm font-medium text-foreground/80">
                      {t("Phone", "फोन")}
                    </h4>
                    <div className="mt-1 space-y-1">
                      <a 
